<section id="all_shelters">
<h1>All Shelters</h1>

<%= link_to "Sort by number of pets", "/shelters?sort=pet_count" %>

<%= form_with url: "/shelters", method: :get, local: true do |f| %>
  <%= f.label :search %>
  <%= f.text_field :search %>
  <%= f.submit "Search" %>
<% end %>

<% @shelters.each do |shelter| %>
  <div id="shelter-<%= shelter.id %>">
    <h3><%= link_to "#{shelter.name}", "/shelters/#{shelter.id}" %></h3>
    <p>Created at: <%= shelter.created_at %></p>
    <%= link_to "Update #{shelter.name}", "/shelters/#{shelter.id}/edit" %>
    <%= link_to "Delete #{shelter.name}", "/shelters/#{shelter.id}", method: :delete %>
  </div>
<% end %>
</section>
<br>
<section id="pending">
<h1>Shelter's with Pending Applications</h1>
<% Shelter.has_pending_applications.each do |shelter| %>
    <%= link_to "#{shelter.name}", "/shelters/#{shelter.id}"%> <br>
<% end %>
</section>